<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ControlsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardElevation="6sp"
        app:cardCornerRadius="0sp"
        app:cardBackgroundColor="@color/purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="26sp"
                android:layout_height="26sp"
                android:src="@drawable/circle_arrow_back"
                android:layout_marginStart="15sp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Controls"
                android:layout_marginStart="12sp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:text="Here you can control all following module"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        app:cardElevation="5sp"
        app:cardCornerRadius="0sp"
        app:strokeWidth="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/humidity"
                    android:drawablePadding="12sp"
                    android:drawableTint="@color/dark"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Control if theres any humidity"
                    android:textSize="14sp"
                    android:layout_marginTop="4sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black" />

            </LinearLayout>

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_checked_color="@color/dark"
                app:sb_checkline_width="0sp"
                app:sb_uncheckcircle_color="@color/light"
                android:layout_marginStart="10sp"
                app:sb_show_indicator="false"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:cardElevation="5sp"
        app:cardCornerRadius="0sp"
        app:strokeWidth="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LPG  Gas Leakage"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/leak"
                    android:drawablePadding="12sp"
                    android:drawableTint="@color/dark"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Control if theres any leakage"
                    android:textSize="14sp"
                    android:layout_marginTop="4sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black" />

            </LinearLayout>

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_checked_color="@color/dark"
                app:sb_checkline_width="0sp"
                app:sb_uncheckcircle_color="@color/light"
                android:layout_marginStart="10sp"
                app:sb_show_indicator="false"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:cardElevation="5sp"
        app:cardCornerRadius="0sp"
        app:strokeWidth="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/temp"
                    android:drawablePadding="12sp"
                    android:drawableTint="@color/dark"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Control if theres any temperature rising"
                    android:textSize="14sp"
                    android:layout_marginTop="4sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black" />

            </LinearLayout>

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_checked_color="@color/dark"
                app:sb_checkline_width="0sp"
                app:sb_uncheckcircle_color="@color/light"
                android:layout_marginStart="10sp"
                app:sb_show_indicator="false"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>