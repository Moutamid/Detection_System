<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:text="Lorem Lipsm yhjsoijiugs"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/controls"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:strokeWidth="0sp"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/back"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12sp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0sp"
                            app:strokeWidth="0sp"
                            app:cardBackgroundColor="@color/light"
                            app:cardCornerRadius="100sp">

                            <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:src="@drawable/gears"
                                app:tint="@color/purple"
                                android:padding="12sp"
                                android:layout_margin="12sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Controls"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/values"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:strokeWidth="0sp"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/back"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12sp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0sp"
                            app:strokeWidth="0sp"
                            app:cardBackgroundColor="@color/light"
                            app:cardCornerRadius="100sp">

                            <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:src="@drawable/sliders"
                                app:tint="@color/purple"
                                android:padding="12sp"
                                android:layout_margin="12sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Adjust Values"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/stats"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    app:strokeWidth="0sp"
                    app:cardElevation="0sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/back"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12sp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0sp"
                            app:strokeWidth="0sp"
                            app:cardBackgroundColor="@color/light"
                            app:cardCornerRadius="100sp">

                            <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:src="@drawable/chart_line"
                                app:tint="@color/purple"
                                android:padding="12sp"
                                android:layout_margin="12sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Stats"
                            android:layout_marginTop="10sp"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/devices"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:strokeWidth="0sp"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/back"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12sp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0sp"
                            app:strokeWidth="0sp"
                            app:cardBackgroundColor="@color/light"
                            app:cardCornerRadius="100sp">

                            <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:src="@drawable/server"
                                app:tint="@color/purple"
                                android:padding="12sp"
                                android:layout_margin="12sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="All Devices"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>